<div style="position:absolute">
<%if @products.count == 0 %>
<p style="color: red">No results matches your search!!</p>
<%else%>
<% @products.each do |product| %>
<div class="flex flex-col pl-0 mb-0 border rounded border-gray-300 list-group-light" style="background-color:white" >
  <%=link_to product_path(product.id), class:"list-group-item my-2" do %>
  <%if product.image.attached?%>
    <%= image_tag product.image, style: "width: 40px", class: "inline rounded-square"%>
  <%else%>
    <%= image_tag("https://www.seekpng.com/png/detail/304-3048401_product-relationship-manager-product-life-cycle-icon.png", {:style => "width:40px;", :class => "inline rounded-circle"}) %>
 <%end%>
    <%=highlight(product.name, params[:search_text])%>
    <%end%>
</div>
<%end%>
<%end%>
</div>